<widget xmlns     = "http://www.w3.org/ns/widgets"
        id        = "com.polyvi.helloxface"
        version   = "2.0.0">

    <pre_install_packages>
        <app_package id = "helloxface" name = "helloxface" />
    </pre_install_packages>

    <name>Hello xFace</name>

    <description>
        A sample xFace application that responds to the deviceready event.
    </description>

    <author href="http://polyvi.github.io/openxface/" email="dev@polyvi.com">
        xFace Team
    </author>

    <access origin="*"/>

    <!-- <content src="http://mysite.com/myapp.html" /> for external pages -->
    <content src="index.html" />

    <preference name="loglevel" value="DEBUG" />
    <preference name="loadingDialog" value="please waiting...."/>
    <preference name="splashscreen" value="xface_logo" />
    <preference name="backgroundColor" value="0xFFF" />
    <preference name="loadUrlTimeoutValue" value="20000" />
    <preference name="InAppBrowserStorageEnabled" value="true" />
    <preference name="disallowOverscroll" value="true" />
    <!-- 配置splash显示的时间 单位ms -->
    <preference name="SplashScreenDelay" value="0" />
    <!-- 配置splash是否自动隐藏 -->
    <preference name="AutoHideSplashScreen" value="true" />
    <!-- 工作目录设定策略，1：仅手机内存;2：仅外部存储（FlashROM及SD/TF扩展卡）;3：外部存储优先  -->
    <preference name="WorkDir" value="3" />
    <preference name="EngineVersion" value="3.1.x" />
    <preference name="EngineBuild" value="12345" />

    <!-- This is required for native Android hooks -->
    <feature name="App">
        <param name="android-package" value="org.apache.cordova.App" />
    </feature>
</widget>
